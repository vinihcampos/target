        <!--<aspect value="1.33"/>-->
        <fdistance value="1" />
        <width value="1800"/>
        <height value="900"/>
    </camera>
    <scene>
        <!-- Geometries -->
        <aggregate split_method="middle" max_prims_node="4" >
            <object type="mesh" name="mesh1" material="grey" >             
                <filename value="objects/millenium-falcon.obj" />
            </object>
        </aggregate>
        
        <!-- Lights -->
        <light type="ambient" name="ambient_light">             
            <intensity r="0.1" g="0.1" b="0.1"/>         
        </light>         
        <light type="directional" name="directional_light">             
            <intensity r="0.5" g="0.6" b="0.5"/>             
            <direction x="-5" y="-5" z="10"/>         
        </light>         
        <light type="directional" name="directional_light">             
            <intensity r="0.5" g="0.5" b="0.5"/>             
            <direction x="5" y="-5" z="10"/>         
        </light>

        <!--<light type="point" name="point_light">             
