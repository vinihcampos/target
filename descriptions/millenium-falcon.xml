<target>
    <settings>
        <output name="millenium-falcon"/>
    </settings>
    <background>
        <color r="0" g="0" b="0"/>
    </background>
    <camera type="perspective">
        <position x="-1200" y="700" z="-3800"/> 
        <target x="-300" y="100" z="-3000"/>
        <up x="0" y="1" z="0"/>
