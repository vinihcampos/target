<target>
    <settings>
        <output name="spheres_row"/>
    </settings>
    <background>
        <color r="18"   g="101"    b="143"/> <!-- top left -->
    </background>
    <camera type="orthographic">
        <position x="0" y="0" z="2"/> <!-- located at the origin -->
        <target x="0" y="0" z="-10"/> <!-- looking down the -Z axis -->
        <up x="0" y="1" z="1"/>       <!-- the camera's up vector -->
        <!-- Specific parameters for orthographic projection -->
        <vpdim l="-5" r="5" b="-1" t="1" /> <!-- View plane dimensions [left right bottom top] -->
        <!-- Retina/image dimensions -->
        <width value="5000"/>
        <height value="1000"/>
    </camera>
    <scene>
        <!-- Geometries -->
        <object type="sphere" name="sphere1" material="redish_2" >
            <radius value="0.4"/>
            <center x="-4.0" y="0.0" z="-1"/>
        </object>
