            <intensity r="0.1" g="0.1" b="0.1"/>
        </light>
        <light type="directional" name="point_light">
            <intensity r="0.9" g="0.9" b="0.9"/>
            <direction x="0.5" y="0.5" z="1"/>
        </light>
    </scene>
